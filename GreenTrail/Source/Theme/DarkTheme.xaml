<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark Theme -->
    <!-- Основной фон -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#0F0606"/>
    <!-- Вспомогательный фон -->
    <SolidColorBrush x:Key="SecondaryColor" Color="#490000"/>
    <!-- Дополнительный фон -->
    <SolidColorBrush x:Key="AdditionalColor" Color="#650000"/>
    <!-- Акцентирования -->
    <SolidColorBrush x:Key="AccentColor" Color="#FF3F3F"/>
    <!-- Текст 0 -->
    <SolidColorBrush x:Key="Text0" Color="#CFCFCF"/>
    <!-- Текст 1 -->
    <SolidColorBrush x:Key="Text1" Color="#141414"/>
    <!-- Succes -->
    <SolidColorBrush x:Key="Succes" Color="#35B369"/>
    <!-- Warning -->
    <SolidColorBrush x:Key="Warning" Color="#EBBC2E"/>
    <!-- Info -->
    <SolidColorBrush x:Key="Info" Color="#2F80ED"/>
    <!-- Error -->
    <SolidColorBrush x:Key="Error" Color="#ED3A3A"/>
    <!-- Серый 0 -->
    <SolidColorBrush x:Key="Gray0" Color="#CFCFCF"/>
    <!-- Серый 1 -->
    <SolidColorBrush x:Key="Gray1" Color="#A7A7A7"/>
    <!-- Белый -->
    <SolidColorBrush x:Key="White" Color="White"/>
    <!-- Черный -->
    <SolidColorBrush x:Key="Black" Color="Black"/>
</ResourceDictionary>